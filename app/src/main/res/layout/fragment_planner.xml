<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <com.ernestoyaquello.dragdropswiperecyclerview.DragDropSwipeRecyclerView
        android:id="@+id/recyclePlanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:item_layout="@layout/item_assignment" />

    <TextView
        android:id="@+id/textPlannerDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_no_assignments_black_150dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:visibility="gone"
        android:text="@string/no_assignments_due_text" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>